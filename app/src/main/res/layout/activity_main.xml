<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Refresh"
        android:id="@+id/refresh_view"
        />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:layout_alignLeft="@id/btn1_view"
        android:layout_alignStart="@id/btn1_view"
        android:layout_above="@id/btn1_view"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/btn2_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn3_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/btn2_view"
        android:layout_toRightOf="@id/btn2_view"
        android:layout_alignTop="@id/btn2_view"
        android:text="3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn1_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/btn2_view"
        android:layout_alignTop="@id/btn2_view"
        android:layout_toStartOf="@id/btn2_view"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn4_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/btn2_view"
        android:layout_below="@id/btn2_view"
        android:text="4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn5_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn2_view"
        android:layout_alignLeft="@id/btn2_view"
        android:layout_alignStart="@id/btn2_view"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn6_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/btn2_view"
        android:layout_below="@id/btn2_view"
        android:text="6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn7_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/btn5_view"
        android:layout_below="@id/btn5_view"
        android:text="7"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn8_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn5_view"
        android:layout_alignLeft="@id/btn5_view"
        android:layout_alignStart="@id/btn5_view"
        android:text="8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn9_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/btn5_view"
        android:layout_below="@id/btn5_view"
        android:text="9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnPl_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/btn8_view"
        android:layout_below="@id/btn8_view"
        android:text="+"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn0_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn8_view"
        android:layout_alignLeft="@id/btn8_view"
        android:layout_alignStart="@id/btn8_view"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEx_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/btn8_view"
        android:layout_below="@id/btn8_view"
        android:text="="
        android:textSize="20sp" />
</RelativeLayout>